<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qlvb.vnpt.botttt.schedule">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.BoTTTTApplication"
        android:allowBackup="true"
        android:exported="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar">
        <activity
            android:name=".ui.activity.LoginActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".ui.activity.XemDanhSachTatCaFileActivity"
            android:screenOrientation="landscape"/>

        <activity android:name=".ui.activity.ViewPDFActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>