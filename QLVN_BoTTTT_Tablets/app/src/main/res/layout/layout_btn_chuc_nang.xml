<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_luu"
            android:layout_margin="@dimen/padding_12dp"
            android:src="@mipmap/ky_04"
            android:layout_width="@dimen/padding_56dp"
            android:layout_height="@dimen/padding_56dp" />

        <ImageView
            android:id="@+id/btn_huy_luu"
            android:layout_margin="@dimen/padding_12dp"
            android:src="@mipmap/ky_05"
            android:layout_width="@dimen/padding_56dp"
            android:layout_height="@dimen/padding_56dp" />
        <ImageView
            android:id="@+id/btn_xem"
            android:layout_margin="@dimen/padding_12dp"
            android:src="@drawable/vbden_02"
            android:layout_width="@dimen/padding_56dp"
            android:layout_height="@dimen/padding_56dp" />
        <ImageView
            android:id="@+id/btn_huy"
            android:layout_margin="@dimen/padding_12dp"
            android:src="@drawable/vbden_004"
            android:layout_width="@dimen/padding_56dp"
            android:layout_height="@dimen/padding_56dp" />
        <ImageView
            android:id="@+id/btn_chuyen"
            android:layout_margin="@dimen/padding_12dp"
            android:src="@drawable/vbden_03"
            android:layout_width="@dimen/padding_56dp"
            android:layout_height="@dimen/padding_56dp" />

        <ImageView
            android:id="@+id/btn_luan_chuyen"
            android:layout_margin="@dimen/padding_12dp"
            android:src="@mipmap/ky_03"
            android:layout_width="@dimen/padding_56dp"
            android:layout_height="@dimen/padding_56dp" />


        <ImageView
            android:id="@+id/btn_ky"
            android:layout_margin="@dimen/padding_12dp"
            android:src="@mipmap/ky_01"
            android:layout_width="@dimen/padding_56dp"
            android:layout_height="@dimen/padding_56dp" />
    </LinearLayout>



</RelativeLayout>