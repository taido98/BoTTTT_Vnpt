<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ViewPDFActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/md_blue_700"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_ky01"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>
                <ImageView
                    android:id="@+id/ic_print"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_ky02"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_doc_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:layout_gravity="center"
                android:paddingLeft="4dp"
                tools:text="Văn bản abc"
                android:gravity="center"
                android:textColor="@color/md_white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ic_rotate_left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_ky03"

                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>
                <ImageView
                    android:id="@+id/ic_rotate_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_ky04"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>
                <ImageView
                    android:id="@+id/ic_exit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_ky05"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/btn_ky"
        android:layout_width="64dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="60dp"
        android:src="@mipmap/ky_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/md_blue_700">

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_chuyen_file"
        android:layout_width="50dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:src="@mipmap/icon_mofile_moi" />
</RelativeLayout>