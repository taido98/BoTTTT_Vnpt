<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@drawable/custom_border_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Chọn cá nhân"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="45dp"
        android:gravity="center"
        android:background="@color/color_line">
        <EditText
            android:id="@+id/edt_search_user"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Tên cá nhân"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:background="@drawable/custom_border_layout_5dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_unit_from_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="45dp"
        android:gravity="center"
        android:background="@color/color_header_select_user">
        <TextView
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_expand"
            android:layout_width="match_parent"
            android:drawablePadding="5dp"
            android:id="@+id/tv_unit_by_user"
            android:layout_height="wrap_content"
            android:text="Phòng sản phẩm văn phòng điện tử"/>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">
    <ListView
        android:layout_weight="1"
        android:id="@+id/listview_user"
        android:layout_width="match_parent"
        android:groupIndicator="@null"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Đóng"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Đồng ý"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

</LinearLayout>


</LinearLayout>
